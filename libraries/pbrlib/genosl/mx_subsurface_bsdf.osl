void mx_subsurface_bsdf(float weight, color _color, color radius, float anisotropy, normal N, output BSDF bsdf)
{
#if OSL_VERSION >= 11311
    // Subsurface closure with MaterialX's parameterization was added in OSL release 1.13.11.0
    bsdf = weight * subsurface_bssrdf(N, _color, radius, anisotropy);
#else
    bsdf = _color * weight * diffuse(N);
#endif
}
